.segmenter
  display: table
  width: 100%
  height: 255px
  margin-bottom: 1em
  background-size: cover !important
  
  a
    width: 100%
    text-align: center
    display: table-cell
    text-decoration: none
    color: #fff
    font-weight: 900
    vertical-align: middle
    text-transform: uppercase
    font-size: 2em
    position: relative
  
  .segmenter__description
    font-size: .5em
    text-transform: none
    position: absolute
    bottom: 0
    width: 100%
    height: 75px
    background: url(https://thoughtworks.fileburst.com/mythoughtworks/core-images/segmenter-shadow.png) repeat-x
  
  .segmenter__label
    position: absolute
    width: 100%
    bottom: 0
    padding-bottom: 10px
    
