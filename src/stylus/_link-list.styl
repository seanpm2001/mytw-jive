.jive-widget-formatted-body .jive-rendered-content
  ul 
    padding: 0
    margin: 0

  li 
    text-align: left
    list-style-type: none

  >ul 
    position: relative

    >li 
      background-color: #eee
      padding: 10px 2%
      float: left
      // width: 29.333333333333336%
      /*text-align: center*/
    >li.active
      background-color: #ccc

    >li>ul 
      display: none
      background-color:#ccc
      top: 38px
      left: 0
      width: 96%
      position: absolute
      padding: 20px 2%

    >li>ul>li 
      padding: 10px 2%
      margin-right: 20px
      float: left
      background-color: pink

    > li:nth-child(1) > ul
      display: block

