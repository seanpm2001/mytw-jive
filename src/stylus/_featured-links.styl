  red: {bg: #F13127, font: #facbcb},
  tan: {bg: #A2785F, font: rgba(255, 255, 255, .8)},
  brown: {bg: #603C23, font: rgba(255, 255, 255, .8)},
  orange: {bg:#F88B25, font: rgba(255, 255, 255, .8)},
  lime: {bg: #BDBE21, font: rgba(255, 255, 255, .8)},
  mint: {bg: #82B97E, font: rgba(255, 255, 255, .8)},
  green: {bg: #00AB58, font: rgba(255, 255, 255, .8)},
  sky: {bg: #78CED6, font: rgba(255, 255, 255, .8)},
