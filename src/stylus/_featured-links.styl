hover(val)
  if(val == rgba(255, 255, 255, .8))
    rgba(255, 255, 255, 1)
  else
    val
  
.featured-links
  ul
    padding: 0
  li 
    list-style: none
    display: inline-block
    margin-bottom: 1em
    
    div      
      a
        display: block
        color: #333333
        text-decoration: none
        background-color: #EEEEEE
        min-height: 45px
        vertical-align: top
        padding: 20px
for key, value in colors
  .featured-links.background-{key}
    li 
      div
        a
          background-color: value.bg
          color: value.font
        a:hover
          color: hover(value.font)
