@import '_visual-identity'
.vidual-identity-header
  background-color: #eeeeee
  overflow: hidden
  padding: 0 5%
  img
    width: 100%
    height: auto
    margin: 0 auto
  h1
    font-size: 56px
    font-weight: 900
    color: #b51b58
    text-align: center
    text-transform: uppercase
    margin: 0
    
  h2.title
    font-weight: 900
    font-style: italic
    font-size: 22px
    border: none

  .vidual-identity-header__subhead
    text-align: center
    font-size: 22px
    color: #333333
    width: 59%
    margin: 0 auto 20px auto
    
    
  .visual-identity-header__download
    color: #999999
    font-size: 18px
    text-align: center